# Library Management System - Client Environment Configuration
# Copy this file to .env and modify as needed for your local setup

# API Configuration
# URL for the backend API - update this if your backend is running on a different host/port
VITE_API_URL=http://localhost:8000

# Authentication Configuration
# Token key name used for localStorage - you can leave this as default
VITE_TOKEN_KEY=library_token

# User data key name used for localStorage - you can leave this as default
VITE_USER_KEY=library_user

# Environment Variables
# Current environment - options: development, clacky, or production
# Controls API behavior and URL construction
VITE_APP_ENV=development

# Feature Flags
# Enable/disable debug logging (true/false)
# Set to false in production environments
VITE_ENABLE_DEBUG_LOGGING=true

# Security Settings
# Token expiration time tracking (in minutes)
# Controls how often the application checks if the token is still valid
# Recommended value: 15-30 minutes
VITE_TOKEN_CHECK_INTERVAL=15
